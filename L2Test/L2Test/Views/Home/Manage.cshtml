<!--************************Add new Admin/User*****************************-->
<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-5 col-sm-offset-1">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h3>Create New Management Login for a Lead</h3><br />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-5 control-label" })
                        <div class="col-md-5">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-5 control-label" })
                        <div class="col-md-5">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-5 control-label" })
                        <div class="col-md-5">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-10">
                            <input type="submit" class="btn btn-primary" value="Register" />
                        </div>
                    </div>
                }
                </div>
            <!--************************List active admin/users*****************************-->
                <div class="col-md-5 col-sm-offset-1">
                    <h3>List of leads:</h3>
                    <ul class="ActiveTechs" style="list-style-type:none">
                        @Html.Raw(UserList.UserList())
                    </ul>
                </div>
        </div>
    </div>
</div>
<br />
<!--************************Add Tech ID*****************************-->
<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-5 col-sm-offset-1">
                <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">
                    <fieldset>
                        <h3>Create New Test Login for a Tech</h3>
                        <div class="form-group">
                            <label class="col-md-5 control-label" for="formTechName">Tech Jomax Login Name</label>
                            <div class="col-md-5">
                                <input id="formTechName" name="formTechName" type="text" placeholder="jtoler" class="form-control input-md" required="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 control-label" for="submit"></label>
                            <div class="col-md-5">
                                <button id="submit" name="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <!--************************List of techs that can take test*****************************-->
            <div class="col-md-5 col-sm-offset-1">
                <h3>List of techs with active logins:</h3>
                <ul class="ActiveTechs" style="list-style-type:none">
                    @Html.Raw(TechList.GetValid())
                </ul>
            </div>
        </div>
    </div>
</div>
<!--************************Delete Admin User*****************************-->
<!-- Modal -->
<div class="modal fade" id="deleteModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" id="deletbtn" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title">Are you sure you want to delete @SelectedUser?</h3>
            </div>
            <div class="modal-body">

                <!--FORM STARTS HERE-->
                <form action="@Url.Action("Delete", "Home")" method="post" enctype="multipart/form-data" class="form-horizontal">
                    <fieldset>
                        <input type="hidden" name="uid" value="@SelectedUser">
                        <!-- Delete Button -->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="submitButton"></label>
                            <div class="col-md-8">
                                <button id="submitButton" name="submitButton" class="btn btn-success">Delete User</button>
                                <button class="btn btn-danger" data-dismiss="modal">Cancel</button>
                            </div>
                        </div>
                    </fieldset>
                </form> <!--FORM ENDS HERE-->
            </div>  <!--Modal Body-->

        </div> <!--Modal Content-->
    </div> <!--Modal Dialog-->
</div><!--End Modal-->
<!--************************Change Password for Admin User*****************************-->
<!-- Modal -->
<div class="modal fade" id="editModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" id="gallerybtn" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title">Reset Password:</h3>
            </div>
            <div class="modal-body">

                <!--FORM STARTS HERE-->
                <form id="editForm" action="@Url.Action("Edit", "Home")" method="post" enctype="multipart/form-data" class="form-horizontal">
                    <fieldset>
                        <!-- ///////////////////////Password reset script/////////////////////// -->
                    </fieldset>
                </form> <!--FORM ENDS HERE-->
            </div>  <!--Modal Body-->

        </div> <!--Modal Content-->
    </div> <!--Modal Dialog-->
</div>
