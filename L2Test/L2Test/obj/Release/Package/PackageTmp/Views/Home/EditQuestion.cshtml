                        <div class="form-group">
                            <label class="col-md-4 control-label" for="newCategory">New Category</label>
                            <div class="col-md-4">
                                <input id="newCategory" name="newCategory" type="text" placeholder="" class="form-control input-md">
                            </div>
                        </div>

                        <input type="hidden" name="uid" value="@CurrentQuestion">

                        <!-- Submit Button -->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="submitButton"></label>
                            <div class="col-md-8">
                                <button id="submitButton" name="submitButton" class="btn btn-info">Add Question</button>
                                <button class="btn btn-danger" data-dismiss="modal">Cancel</button>
                            </div>
