<h1 style="color:orangered;">@ViewBag.Err</h1>


<!--Modal Buttons-->
<div class="container-fluid">
    <section class="row">
        <center>
            <div class="col-md-4">
                <div class="wrapper">
                    <button type="button" class="btn btn-lg" data-toggle="modal" data-target="#addModal">Add New Question</button>
                </div>
            </div>
            <div class="col-md-4">
                <div class="wrapper">
                    <button type="button" class="btn btn-lg" data-toggle="modal" data-target="#exportModal">Export CSV File</button>
                </div>
            </div>
            <div class="col-md-4">
                <div class="wrapper">
                    <button type="button" class="btn btn-lg" data-toggle="modal" data-target="#importModal">Import CSV File</button>
                </div>
            </div>
        </center>
    </section>
</div>
<!--************************Export CSV*****************************-->
<div class="modal fade" id="exportModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" id="editbtn" class="close" data-dismiss="modal">&times;</button>
                <h2 class="modal-title">Export CSV</h2>
            </div>
            <div class="modal-body">
                <!-- Submit Button -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="submitButton"></label>
                    <div class="col-md-12">
                        @Html.ActionLink("Download CSV", "DownloadCSV", "Home", null, new { @class = "btn btn-info" })
                        <button class="btn btn-danger" data-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>  <!--Modal Body-->
        </div> <!--Modal Content-->
    </div> <!--Modal Dialog-->
</div><!--Modal-->
<!--************************Import CSV*****************************-->
<div class="modal fade" id="importModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" id="editbtn" class="close" data-dismiss="modal">&times;</button>
                <h2 class="modal-title">Upload CSV File</h2>
            </div>
            <div class="modal-body">
                <form action="/Home/UploadCSV" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <br />
                        <input type="file" name="FileUpload" id="file" />
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="CSVAppend">Import Option</label>
                        <div class="col-md-4">
                            <div class="radio">
                                <label for="CSVAppend-0">
                                    <input type="radio" name="CSVAppend" id="CSVAppend-0" value="1" checked="checked">
                                    Append to Test
                                </label>
                            </div>
                            <div class="radio">
                                <label for="CSVAppend-1">
                                    <input type="radio" name="CSVAppend" id="CSVAppend-1" value="2">
                                    Replace Test
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-inline">
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-info"/>
                            <button class="btn btn-danger" data-dismiss="modal">Cancel</button>
                           <!--<p class="help-block">See about page for help formatting the CSV.</p>  Add this again when the CSV is human readable-->
                        </div>
                    </div>
                </form>
             </div>  <!--Modal Body-->
        </div> <!--Modal Content-->
    </div> <!--Modal Dialog-->
</div><!--Modal-->
<!--************************Add Question***************************-->
<div class="modal fade" id="addModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" id="editbtn" class="close" data-dismiss="modal">&times;</button>
                <h2 class="modal-title">Add New Question</h2>
            </div>
            <div class="modal-body">

