                                    </span>
                                </div>
                            </div>
                        </div>
                        <!-- Get Answer6 -->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="formAnswer6">Answer: </label>
                            <div class="col-md-6">
                                <div class="input-group">
                                    <input id="formAnswer6" name="formAnswer6" class="form-control" type="text" maxlength="255">
                                    <span class="input-group-addon">
                                        <input type="checkbox" name="formC6" value="1">
                                    </span>
                                </div>
                            </div>
                        </div>
                        <!-- Get Answer7 -->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="formAnswer7">Answer: </label>
                            <div class="col-md-6">
                                <div class="input-group">
                                    <input id="formAnswer7" name="formAnswer7" class="form-control" type="text" maxlength="255">
                                    <span class="input-group-addon">
                                        <input type="checkbox" name="formC7" value="1">
                                    </span>
                                </div>
                            </div>
                        </div>
                        <!-- Get Answer8 -->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="formAnswer8">Answer: </label>
                            <div class="col-md-6">
                                <div class="input-group">
                                    <input id="formAnswer8" name="formAnswer8" class="form-control" type="text" maxlength="255">
                                    <span class="input-group-addon">
                                        <input type="checkbox" name="formC8" value="1">
                                    </span>
                                </div>
                            </div>
                        </div>
                        <!-- Get Category -->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="formCategory">Select Category</label>
                            <div class="col-md-4">
                                <select id="formCategory" name="formCategory" class="form-control">
                                    <option value="1">New Catagoy</option>
                                    @Html.Raw(ListHelp.CategoryList())
                                </select>
                            </div>
                        </div>
                        <!-- New Category-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="newCategory">New Category</label>
                            <div class="col-md-4">
                                <input id="newCategory" name="newCategory" type="text" placeholder="" class="form-control input-md">
                            </div>

                        </div>
                        <!-- Submit Button -->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="submitButton"></label>
                            <div class="col-md-8">
                                <button id="submitButton" name="submitButton" class="btn btn-info">Add Question</button>
                                <button class="btn btn-danger" data-dismiss="modal">Cancel</button>
                            </div>
                        </div>

                    </fieldset>
                </form> <!--FORM ENDS HERE-->
            </div>  <!--Modal Body-->

        </div> <!--Modal Content-->
    </div> <!--Modal Dialog-->
</div>

